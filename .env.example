# Website API Credentials
SECRET_KEY=your_secret_key_here
WBL_API_URL=https://api.whitebox-learning.com/api
API_TOKEN=your_api_token_here

# Auto-login settings (optional). If API_TOKEN is missing/expired, client will call API_LOGIN_ENDPOINT.
# API_LOGIN_ENDPOINT is relative to WBL_API_URL (default: /api/login).

# Bot Extraction Settings
DISTANCE_MILES=50
MAX_APPLICATIONS_PER_RUN=50
DEFAULT_KEYWORDS="AI/ML Engineer, MLOps, Gen AI"

# Execution Mode
DRY_RUN=false  # Set to 'true' to run without saving to database/API (validation only)

# Security
VALIDATE_SECRETS_AT_STARTUP=true  # Validate all required secrets before execution
